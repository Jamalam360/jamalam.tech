---
import type { MarkdownLayoutProps } from "astro";
import Footer from "../components/Footer.astro";
import MainHead from "../components/MainHead.astro";

type Props = MarkdownLayoutProps<{
  title: string;
  description: string;
  image: string;
  category: string;
}>;

const { title, description, image } = Astro.props.frontmatter;
---

<html lang="en">
  <head>
    <MainHead
      title={title}
      description={description}
      image={image}
      imageAlt={description}
    />
  </head>
  <body class="bg-gray-900 pt-6 w-full min-h-screen flex flex-col items-center">
    <a
      href={import.meta.env.BASE_URL + "projects"}
      class="text-white underline max-w-prose w-full mb-4 ml-4 md:ml-0"
      ><p class="text-2xl">Back</p>
    </a>
    <div class="flex flex-col items-center font-inter mb-8 mx-4 md:mx-0">
      <article class="prose prose-invert">
        <h1>{title}</h1>
        <p class="text-gray-400">
          {description}
        </p>
        {
          image.endsWith(".mp4") ? (
            <video controls autoplay loop class="max-w-full w-full">
              <source src={import.meta.env.BASE_URL + image} type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          ) : (
            <img
              src={import.meta.env.BASE_URL + image}
              alt={title}
              class="max-w-full w-full"
            />
          )
        }
        <slot />
      </article>
    </div>
    <Footer />
  </body>
</html>
