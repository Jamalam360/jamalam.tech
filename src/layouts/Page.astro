---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";

import minimize from "../assets/minimize.svg";
import maximize from "../assets/maximize.svg";
import close from "../assets/close.svg";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Jamalam's Site",
  description = "Jamalam's portfolio, blog, and more.",
} = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body
    class="bg-gradient-to-br from-sky-500 via-sky-700 to-sky-500 w-full min-h-screen flex flex-col items-center justify-center font-inter"
  >
    <div
      class="pt-8 w-11/12 flex flex-col items-center justify-center drop-shadow-4xl"
    >
      <div
        class="bg-white rounded-tr-lg rounded-tl-lg text-md w-full p-3 flex items-center"
      >
        <a href={import.meta.env.BASE_URL} class="pl-2"
          >james@jamalam.tech: ~/</a
        >
        <div class="flex-grow"></div>
        {
          [
            [minimize, "Minimize Button"],
            [maximize, "Maximize Button"],
            [close, "Close Button"],
          ].map(async (i) => {
            return (
              <img
                src={i[0]}
                alt={i[1]}
                class="px-2 w-8"
                height="16"
                width="16"
              />
            );
          })
        }
      </div>
      <div
        class="bg-gray-900 w-full text-sm rounded-br-lg rounded-bl-lg text-white flex flex-col font-jetbrains p-2"
      >
        <main><slot /></main>
      </div>
      <Footer />
    </div>
  </body>
</html>
