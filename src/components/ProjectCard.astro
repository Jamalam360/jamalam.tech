---
type Props = {
  title: string;
  description: string;
  image: string;
  alt: string;
  category: string;
  url: string;
};

const { title, description, image, alt, category, url } = Astro.props;

let postTitle = `${title} - ${category}`;

if (!category) {
  postTitle = `${title}`;
}
---

<div
  class="container flex flex-col items-center justify-center drop-shadow-2xl bg-slate-100 dark:bg-gray-800 pb-4"
>
  <img src={image} alt={alt} class="object-fit mb-6 w-full" />
  <a href={url}>
    <h3 class="text-lg text-center uppercase px-2 mb-2">{postTitle}</h3>
  </a>
  <p class="px-4">{description}</p>
</div>
