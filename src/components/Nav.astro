---
import { Image } from "@astrojs/image/components";

const links = [
  {
    name: "Portfolio",
    href: "/portfolio",
  },
  {
    name: "Blog",
    href: "/blog",
  },
  {
    name: "About",
    href: "/about",
  },
];

const socials = [
  {
    name: "Twitter",
    url: "https://twitter.com/jamalamisadev",
    icon: "/assets/icons/twitter.svg",
  },
  {
    name: "GitHub",
    url: "https://github.com/Jamalam360",
    icon: "/assets/icons/github.svg",
  },
];
---

<nav
  class="flex flex-row w-full gap-4 justify-between items-center py-4 border-b-2 border-slate-700"
>
  <div class="flex flex-row justify-center gap-4 w-1/3">
    {
      links.map((link) => (
        <a href={link.href} class="text-xl font-bold text-blue-700">
          {link.name}
        </a>
      ))
    }
  </div>
  <a href="/" class="flex flex-row justify-center w-1/3">
    <Image
      src="/assets/profile-picture.png"
      alt="Jamalam's Profile Picture"
      width={48}
      height={48}
      class={"rounded motion-safe:hover:animate-spin duration-1000"}
    />
  </a>
  <div class="flex flex-row justify-center gap-4 w-1/3">
    {
      socials.map((social) => (
        <a href={social.url} target="_blank" rel="noopener noreferrer">
          <Image
            src={social.icon}
            alt={`${social.name} Icon`}
            width={28}
            height={28}
            class="stroke-blue-600"
          />
        </a>
      ))
    }
  </div>
</nav>
