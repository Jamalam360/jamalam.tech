---
interface Props {
  src: string;
  alt?: string;
}

const { src, alt } = Astro.props;
---

{
  src && src.endsWith(".mp4") ? (
    <video controls autoplay loop>
      <source src={src} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  ) : src ? (
    <img src={src} alt={alt} class="object-fit" />
  ) : undefined
}
