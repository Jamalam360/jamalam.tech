---
import Base from "../layouts/Base.astro";
import { Image } from "@astrojs/image/components";
---

<Base title="About Me | Jamalam">
  <div class="flex justify-center w-full">
    <div class="w-2/3 flex flex-col justify-center mt-8">
      <!-- Header -->
      <div class="flex justify-center w-full">
        <div class="w-full flex flex-row justify-between items-center">
          <Image
            src="/assets/selfie.jpg"
            alt="A picture of me"
            width="512"
            aspectRatio="1"
            class="rounded hover:rounded-md duration-100 object-contain"
          />
          <div class="ml-6">
            <p class="text-5xl font-bold">About me.</p>
            <p>Hi! I'm James! I make things - quite a few things.</p>
          </div>
        </div>
      </div>

      <div class="w-full mt-8">
        <!-- Computer Specs -->
        <div>
          <h1 class="text-2xl font-bold text-blue-500">Computers</h1>
        </div>
      </div>
    </div>
  </div>
</Base>
